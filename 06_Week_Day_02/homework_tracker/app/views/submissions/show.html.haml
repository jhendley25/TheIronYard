= @submission.name

%h3 Add Comment to Submission
- @submission.comments.each do |x|
  = x.comment
  %br

= form_for [@submission, @create_comment], url: create_comment_location_cohort_assignment_submission_path(@location, @cohort, @assignment, @submission) do |f|
  = f.label :comment
  %br
  = f.text_area :comment
  %br
  = f.submit '-Save-'
= link_to "Go Back to Assignment", location_cohort_assignment_path(@location, @cohort, @assignment)
|
= link_to "Go Home", root_path
