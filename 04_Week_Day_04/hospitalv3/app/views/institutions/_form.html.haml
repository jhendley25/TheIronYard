= form_for @institution do |f|
  - if @institution.errors.any?
    #error_explanation
    %h2= "#{pluralize(@institution.errors.count, "error")} prohibited this institution from being saved:"
    %ul
      - @institution.errors.full_messages.each do |msg|
        %li= msg
  = f.label :name
  = f.text_field :name, placeholder: "Name of Institution"
  %br
  = f.label :location
  = f.text_field :location, placeholder: "Location of Institution"
  %br
  = f.submit
  |
  = link_to "Cancel", root_path